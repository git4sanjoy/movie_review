<h1>Listing vendors</h1>


    <% @vendors.each do |vendor| %>

        <h2><%= vendor.name %></h2>
        <%= image_tag vendor.image_url(:thumb) %>
        <p><%= link_to 'Show', vendor %>
        <%= link_to 'Edit', edit_vendor_path(vendor) %>
        <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></p>

    <% end %>


<br>

<%= link_to 'New Vendor', new_vendor_path %>
