<div class="row">
  <% @movies.each do |movie| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <%= link_to (image_tag movie.image , class: "image", width: "100%"), movie %>
        </div>
      </div>
  <% end %>
</div>

<%= link_to 'New Movie', new_movie_path, class: "btn btn-primary" %>
